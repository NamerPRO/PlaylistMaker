<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center | top">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/playlist_list_item_playlist_cover"
            android:layout_width="160dp"
            android:layout_height="160dp"
            tools:src="@drawable/dev_playlist_recycler_view_stub"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/playlist_list_item_playlist_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        tools:text="Best songs 2021"
        style="@style/playlist_item_track_title"/>

    <TextView
        android:id="@+id/playlist_list_item_playlist_tracks_in_playlist"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:text="98 треков"
        style="@style/playlist_item_track_base_information"/>

</LinearLayout>