<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yp_light_gray"
    tools:context="ru.namerpro.playlistmaker.playlist.ui.fragment.PlaylistFragment">

    <LinearLayout
        android:id="@+id/playlist_playlist_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/playlist_playlist_cover"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/dev_playlist_recycler_view_stub"/>

            <ImageView
                android:id="@+id/playlist_back_button"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_back"
                style="@style/playlist_back_button"/>

        </FrameLayout>

        <TextView
            android:id="@+id/playlist_playlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Best songs 2021"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/playlist_playlist_title_appearance" />

        <TextView
            android:id="@+id/playlist_playlist_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2022"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/playlist_playlist_information_appearance" />

        <TextView
            android:id="@+id/playlist_playlist_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="300 минут · 98 треков"
            style="@style/playlist_playlist_information_appearance" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp">

            <ImageButton
                android:id="@+id/playlist_playlist_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_playlist"
                android:background="@null" />

            <ImageButton
                android:id="@+id/playlist_playlist_extra_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_more_actions_with_playlist"
                android:background="@null" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_sheet_background_color_playlist"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/playlist_tracks_in_playlist_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_marginBottom="-16dp"
        app:behavior_hideable="false"
        tools:visibility="gone"
        style="@style/playlist_tracks_selection_menu_appearance"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap_line"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/playlist_no_tracks_in_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="@string/playlist_no_tracks_in_playlist_info"
                style="@style/playlist_no_tracks_in_playlist_appearance"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlist_tracks_in_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/playlist_extra_settings_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        style="@style/playlist_extra_settings_menu_appearance">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_swap_line" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                style="@style/playlist_in_add_to_playlist_section_item_appearance">

                <ImageView
                    android:id="@+id/playlist_cover"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/track_img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="53dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playlist_title"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="44dp"
                        android:singleLine="true"
                        tools:text="Here Comes The Sun (Remastered 2008)"
                        style="@style/track_name"/>

                    <TextView
                        android:id="@+id/playlist_tracks_count"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingRight="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        style="@style/track_sub_information"
                        tools:text="10 треков"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/playlist_extra_settings_menu_share_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/playlist_extra_settings_share_playlist"
                style="@style/playlist_extra_settings_tabs_appearance" />

            <TextView
                android:id="@+id/playlist_extra_settings_edit_playlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/playlist_extra_settings_edit_playlist"
                style="@style/playlist_extra_settings_tabs_appearance" />

            <TextView
                android:id="@+id/playlist_extra_settings_menu_delete_playlist_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/playlist_extra_settings_delete_playlist"
                style="@style/playlist_extra_settings_tabs_appearance" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>