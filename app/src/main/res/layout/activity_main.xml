<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/yp_white"
        android:textSize="@dimen/medium_text_size"
        android:font="@font/ys_display_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_marginBottom="28dp">

        <Button
            android:id="@+id/main_activity_search"
            android:layout_marginTop="40dp"
            android:text="@string/search_button"
            app:icon="@drawable/ic_search"
            style="@style/main_buttons_style"/>

        <Button
            android:id="@+id/main_activity_media"
            android:text="@string/media_button"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_media"
            style="@style/main_buttons_style"/>

        <Button
            android:id="@+id/main_activity_settings"
            android:text="@string/settings_button"
            android:layout_marginTop="16dp"
            app:icon="@drawable/ic_settings"
            style="@style/main_buttons_style"/>

    </LinearLayout>

</LinearLayout>