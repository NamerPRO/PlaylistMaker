<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_buttons_style" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_buttons_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/app_settings_menu_text_size</item>
        <item name="android:paddingVertical">@dimen/app_settings_standard_padding</item>
        <item name="android:layout_marginEnd">@dimen/app_settings_standard_margin_left</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/yp_gray</item>
    </style>

    <style name="activity_top_text">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="activity_back_button">
        <item name="android:tint">@color/yp_black</item>
    </style>

    <style name="switch_appearence" parent="settings_buttons_style">
        <item name="android:layout_marginHorizontal">60dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="trackTint">@color/yp_light_gray</item>
        <item name="thumbTint">@color/yp_gray</item>
    </style>

    <style name="edit_text_theme">
        <item name="android:background">@drawable/round_shape_borders_gray</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:drawableStart">@drawable/ic_search_search_light</item>
    </style>

    <style name="clear_button">
        <item name="android:src">@drawable/ic_search_clear_input_light</item>
    </style>

    <style name="track_name">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_sub_information">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="handleable_exception">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">16sp</item>
    </style>

    <style name="standard_round_button_style" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">10sp</item>
        <item name="android:paddingHorizontal">14sp</item>
    </style>

    <style name="audio_track_name_author">
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="audio_fab">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="fabCustomSize">52dp</item>
        <item name="elevation">0dp</item>
        <item name="android:alpha">0.25</item>
        <item name="tint">@color/yp_white</item>
        <item name="backgroundTint">@color/yp_black</item>
        <item name="android:layout_marginTop">54dp</item>
    </style>

    <style name="audio_track_info" parent="audio_track_info_data">
        <item name="android:textColor">@color/yp_gray</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>

    <style name="audio_track_info_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="audio_track_progress">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="audio_back_button">
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="media_playlist_tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="media_tab_layout_tabs">
        <item name="tabTextAppearance">@style/media_playlist_tabs</item>
        <item name="tabTextColor">@color/yp_black</item>
        <item name="tabIndicatorColor">@color/yp_black</item>
        <item name="tabRippleColor">@color/yp_gray</item>
    </style>
</resources>